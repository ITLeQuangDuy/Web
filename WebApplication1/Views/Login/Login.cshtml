
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Style/Login/Login.css" rel="stylesheet" />
    
</head>
<body>
    <div id="wrapper">
        <form action="" id="form-login">
            <h1 class="form-heading">Đăng nhập</h1>
            <div class="form-group">
                <i class="far fa-user"></i>
                <input type="text" class="form-input" placeholder="Tên đăng nhập">
            </div>
            <div class="form-group">
                <i class="fas fa-key"></i>
                <input type="password" class="form-input" placeholder="Mật khẩu">
                <div id="eye">
                    <i class="far fa-eye"></i>
                </div>
            </div>
            <p style="text-align: right ;"><a href="#" class="form-forgot">Quên mật khẩu ?</a></p>
            <input type="submit" value="Đăng ký" class="form-submit">
            <input type="submit" value="Đăng nhập" class="form-submit">
        </form>
    </div>
</body>
</html>
